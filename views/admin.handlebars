<div class="user-list-wrapper w-150 mx-auto mt-16 p-4 rounded-lg shadow-lg bg-white">
    <div class="flex justify-between items-center mb-6">
        <div class="user-list-title font-semibold text-lg text-gray-800">List Products</div>
        <a href="/admin/-1">
            <button class="text-white bg-green-500 hover:bg-green-700 font-semibold py-2 px-4 rounded-lg text-sm" >Add Product</button>
        </a>
    </div>
    <div class="user-list-content divide-y divide-gray-200">
        <div class="user-list-header grid grid-cols-4 gap-4 py-2 text-gray-400 font-semibold text-sm">
            <div class="header-role">Index</div>
            <div class="header-name">Name</div>
            <div class="header-create-date">Price</div>
            <div class="header-action">Action</div>
        </div>
        {{#each productDatalist}}
        <div class="user-item grid grid-cols-4 gap-4 py-2 items-center">
            <div class="item-role">
                <span class="role-badge text-gray-800 text-xs font-semibold px-2 py-1 rounded-lg">{{ productindex }}</span>
            </div>
            <div class="item-name text-gray-800 text-sm">{{ productName }}</div>
            <div class="item-create-date text-gray-800 text-sm">{{ productPrice }}</div>
            
            <div class="item-action">
                <button class="text-white bg-blue-500 hover:bg-blue-700 font-semibold py-1 px-3 rounded-lg text-xs mr-2" onclick="location.href='/admin/{{productindex}}'">Edit</button>
                <button id = "delete" class="text-white bg-red-500 hover:bg-red-700 font-semibold py-1 px-3 rounded-lg text-xs" value="{{ productindex }}">Delete</button>
            </div>
        </div>
        {{/each}}
        
    </div>
</div>
<script src="\js\admin.js"></script>
